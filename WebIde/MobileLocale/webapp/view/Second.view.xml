<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.coopersap.mobilelocale.controller.Second" xmlns="sap.m"
	xmlns:layout="sap.ui.commons.layout">
	<Page showHeader="false" title="Page Title" showFooter="false" showNavButton="false" enableScrolling="false">
		<content>
			<layout:AbsoluteLayout horizontalScrolling="Hidden" verticalScrolling="Auto">
				<layout:positions>
					<layout:PositionContainer left="0px" top="0px">
						<layout:control>
							<OverflowToolbar width="100%" design="Solid" visible="true" enabled="true">
								<content>
									<OverflowToolbarButton text="Action" type="Back" iconFirst="false" width="auto" enabled="true" visible="true" iconDensityAware="false"
										press="_onOverflowToolbarButtonPress"/>
									<Title text="Viagem (P - 122)" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
									<ToolbarSpacer width=""/>
									<OverflowToolbarButton text="Menu" type="Transparent" icon="sap-icon://menu2" iconFirst="true" width="auto" enabled="true" visible="true"
										iconDensityAware="false"/>
								</content>
							</OverflowToolbar>
						</layout:control>
					</layout:PositionContainer>
					<layout:PositionContainer left="1%" bottom="0.1em">
						<layout:control>
							<SegmentedButton width="98%" enabled="true" visible="true">
								<items>
									<SegmentedButtonItem icon="sap-icon://error" text="" width="20%" enabled="true" press="_onSegmentedButtonItemPress"/>
									<SegmentedButtonItem icon="sap-icon://media-pause" text="pausar" width="39%" enabled="true"/>
									<SegmentedButtonItem icon="sap-icon://stop" text="Parar" width="41%" enabled="true"/>
								</items>
							</SegmentedButton>
						</layout:control>
					</layout:PositionContainer>
				</layout:positions>
			</layout:AbsoluteLayout>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="false" visible="false">
				<content>
					<ToolbarSpacer width=""/>
				</content>
			</OverflowToolbar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>