						</layout:control>
					</layout:PositionContainer>
				</layout:positions>
				<layout:positions>
					<layout:PositionContainer left="30.2%" top="5em">
						<layout:control>
							<VBox>
								<Text text="Detalhes 222" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</VBox>
						</layout:control>
					</layout:PositionContainer>
				</layout:positions>
				
				<layout:positions>
					<layout:PositionContainer left="1%" bottom="0.1em">
						<layout:control>
							<SegmentedButton width="98%" enabled="true" visible="true">
								<items>
									<SegmentedButtonItem icon="sap-icon://error" text="Prolema" width="43%" enabled="true" press="_onSegmentedButtonItemPress"/>
									<SegmentedButtonItem icon="sap-icon://car-rental" text="Iniciar Viagem" width="57%" enabled="true" press="_onSegmentedButtonItemPress1"/>
								</items>
							</SegmentedButton>
						</layout:control>
					</layout:PositionContainer>
