									<!--<ToolbarSpacer width=""/>-->
									<OverflowToolbarButton text="Menu" type="Transparent" icon="sap-icon://menu2" iconFirst="true" width="auto" enabled="true" visible="true"
										iconDensityAware="false"/>
								</content>
							</OverflowToolbar>
						</layout:control>
					</layout:PositionContainer>
					
					
					
					
				</layout:positions>
				
				<layout:positions>
					<layout:PositionContainer right="70%" top="5em">
						<layout:control>
							<VBox>
								<Text text="Detalhes:" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
